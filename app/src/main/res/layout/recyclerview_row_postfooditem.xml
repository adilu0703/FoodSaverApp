<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/PLfooditemcardviewid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_margin="10dp"
        app:cardUseCompatPadding="true"
        android:padding="4dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#F1F1F1"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/PLfooditemtitleid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10sp"
                    android:text="Name"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    />




            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                >

                <TextView
                    android:id="@+id/PLquanityviewid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10sp"
                    android:text="@string/quantityheadd"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PLfooditemquantityid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:text="@string/quantityf"
                    android:layout_toRightOf="@id/PLquanityviewid"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/expiryiconid"
                    android:layout_width="28sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5dp"
                    android:layout_toStartOf="@id/PLfooditemtime"
                    android:src="@drawable/expiry" />

                <TextView
                    android:id="@+id/PLfooditemtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="2sp"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:maxLines="1"
                    />

            </RelativeLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp">

                <ImageView
                    android:id="@+id/homeiconid"
                    android:layout_width="33sp"
                    android:layout_height="40sp"
                    android:src="@drawable/address2"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    >
                    <TextView
                        android:id="@+id/PLfooditemaddressid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/addressdash"
                        android:textSize="15sp"
                        android:layout_marginStart="3sp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        />
                    <TextView
                        android:id="@+id/PLfooditemcityid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/citydash"
                        android:textSize="15sp"
                        android:layout_marginStart="3sp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>